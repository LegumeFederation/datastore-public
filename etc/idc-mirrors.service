[Unit]
Description=iDC Mirrors Container
Requires=docker.service
After=docker.service

[Service]
User=mirrors
ExecStart=/usr/bin/docker run -p 80:80 --name idc_mirrors --env-file=/usr/local/src/datastore-public/datastore.env --log-driver=syslog --log-opt tag="idc_mirrors" iplantc/idc_mirrors
ExecStop=/usr/bin/docker stop idc_mirrors ; /usr/bin/docker rm -r idc_mirrors
Restart=always

[Install]
WantedBy=multi-user.target